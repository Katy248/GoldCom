                Grid.Row="3"
                Orientation="Horizontal" 
                HorizontalAlignment="Right">
                <Button Content="{StaticResource AddCustomer}"/>
                <Button Content="{StaticResource EditCustomer}"/>
                <Button Content="{StaticResource DeleteCustomer}"/>
            </StackPanel>
        </Grid>
